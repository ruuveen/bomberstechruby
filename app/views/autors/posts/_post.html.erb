<meta name="viewport" content="width=device-width, initial-scale=1.0">
<tr>
  <td><%= link_to post.title, autors_post_path(post)%></td>
  <td></td>
  <% if post.published? %>
  <td><%=link_to 'Unpublish', unpublish_autors_post_path(post), method: :put, class: 'btn btn-sm btn-primary'%></td>
  <% else %>
  <td><%=link_to 'Publish', publish_autors_post_path(post), method: :put, class: 'btn btn-sm btn-success'%></td>
  <% end %>
  <td><%=link_to 'Edit', edit_autors_post_path(post), class: 'btn btn-sm btn-warning'%></td>
  <td><%=link_to 'Remove', autors_post_path(post), method: :delete, data:{confirm:'Are you sure?'}, class: 'btn btn-sm btn-danger' %></td>
</tr>
